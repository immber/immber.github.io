---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import { getCollection, getEntry } from "astro:content";


export async function getStaticPaths() {
	const documents = await getCollection("leaflet");
	return documents.map((document) => ({
		params: { leaflet: document.id },
		props: document,
	}));
}

const document = await getEntry("leaflet", Astro.params.leaflet);

if (!document) {
	throw new Error(`Document with id "${Astro.params.leaflet}" not found`);
}

const { Content } = await document.render()
