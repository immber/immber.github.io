const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-neutral"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto">
    <li><a class="py-3 text-xl" id="home" href="/">Home</a></li>
    <li><a class="py-3 text-xl" id="projects" href="/projects">Projects</a></li>
    <li><a class="py-3 text-xl" id="services" href="/services">Services</a></li>
